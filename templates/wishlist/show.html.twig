{% extends 'base.html.twig' %}

{% block title %}Wishlist{% endblock %}

{% block content %}
    {% block navigation %}
        <div class="navigation">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" style="fill: rgba(0, 0, 0, 1);transform: ;msFilter:;"><path d="M12.707 17.293 8.414 13H18v-2H8.414l4.293-4.293-1.414-1.414L4.586 12l6.707 6.707z"></path></svg>
        </div>
    {% endblock %}
    {% block body %}
        <h1 class="main__title">Wishlist</h1>
        <div class="main__actions">
            <a class="button button--accent" href="{{ path('wishlist_item_add', { wishlistId: wishlist.id }) }}">Add item</a>
            <a class="button" href="{{ path('wishlist_update', { id: wishlist.id}) }}">Edit</a>
            {% include 'wishlist/_delete.html.twig' %}
        </div>
        <div class="card-container">
            {% for item in wishlist.items %}
                {% include 'wishlist/wishlist_item/_show.html.twig' %}
            {% endfor %}
        </div>
    {% endblock %}
{% endblock %}
{% extends 'base.html.twig' %}

{% block title %}Show group{% endblock %}

{% block content %}
    {% block body %}
        <h1>Show group</h1>
        <div>
            <h2>{{ wishlist_group.name }}</h2>
            <a href="{{ path('wishlist_group_member_add', { 'groupId' : wishlist_group.id }) }}">Add member</a>
            {% for wishlist_group_member in wishlist_group.members %}
                <div>
                    <h3>{{ wishlist_group_member.pseudonym }}</h3>
                    <span>{{ wishlist_group_member.email }}</span>
                    <span>{{ wishlist_group_member.owner ? 'Owner' }}</span>
                    {% if wishlist_group_member.wishlistId %}
                        <a href="{{ path('wishlist_show', { 'id' : wishlist_group_member.wishlistId }) }}">Show wishlist</a>
                    {% else %}
                        <a href="{{ path('wishlist_group_member_associate_wishlist', { 'groupId' : wishlist_group.id, id: wishlist_group_member.wishlistMemberId }) }}">Create wishlist</a>
                    {% endif %}
                    <div>
                        {% include 'wishlist/wishlist_group/wishlist_group_member/_remove.html.twig' %}
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endblock %}
{% endblock %}
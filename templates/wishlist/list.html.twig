{% extends 'base.html.twig' %}

{% block title %}Wishlists{% endblock %}

{% block content %}
    {% block body %}
        <h1 class="main__title">{{ view.title|trans }}</h1>
        <div class="main__actions">
            <a class="button button--accent" href="{{ view.createWishlist.link }}">{{ view.createWishlist.message|trans }}</a>
        </div>
        <div class="card-container">
            {% for wishlist in view.wishlists %}
                <div class="card">
                    <h2 class="card__title">{{ wishlist.name }}</h2>
                    <div>
                        <span class="card__label">{{ wishlist.visibility }}</span>
                    </div>
                    <div class="card__actions">
                        <a class="button button--accent button--round" href="{{ path('wishlist_show', { id: wishlist.id}) }}">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" style="fill: rgba(255, 255, 255, 1);"><path d="M12 9a3.02 3.02 0 0 0-3 3c0 1.642 1.358 3 3 3 1.641 0 3-1.358 3-3 0-1.641-1.359-3-3-3z"></path><path d="M12 5c-7.633 0-9.927 6.617-9.948 6.684L1.946 12l.105.316C2.073 12.383 4.367 19 12 19s9.927-6.617 9.948-6.684l.106-.316-.105-.316C21.927 11.617 19.633 5 12 5zm0 12c-5.351 0-7.424-3.846-7.926-5C4.578 10.842 6.652 7 12 7c5.351 0 7.424 3.846 7.926 5-.504 1.158-2.578 5-7.926 5z"></path></svg>
                        </a>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endblock %}
{% endblock %}
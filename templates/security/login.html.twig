{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <h1 class="main__title">Sign in</h1>
    {% if error %}
        <div class="main__messages">
            <ul class="message__list message__list--error">
                <li class="message__item">{{ error.messageKey|trans(error.messageData, 'security') }}</li>
            </ul>
        </div>
    {% endif %}
    <form class="form" method="post">
        <div class="form-control">
            <label class="required" for="username">Email</label>
            <input class="required" type="email" value="{{ last_username }}" name="_username" id="username" autocomplete="email" required autofocus>
        </div>

        <div class="form-control">
            <label class="required" for="password">Password</label>
            <input class="required" type="password" name="_password" id="password" autocomplete="current-password" required>
        </div>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        <button class="button button--accent" type="submit">Sign in</button>
    </form>
    <a class="button" href="{{ path('app_register') }}">Register</a>
{% endblock %}
